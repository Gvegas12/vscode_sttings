{
  "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash.exe",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "explorer.confirmDelete": false, // форматировать код при сохранении файла
  "editor.formatOnPaste": false, // форматировать при вставке фрагмента кода
  "files.eol": "\r\n",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.addMissingImports": "always"
  }, // набор действий при сохранении файла
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Разрешить или запретить расширения eslint и prettier
  "editor.formatOnSave": true,
  "prettier.enable": true, // нужен рестарт vs code
  "eslint.enable": true,
  "eslint.format.enable": true, // NEW запретить или разрешить форматирование
  "eslint.run": "onType", // запускать проверку кода по мере печати кода
  "eslint.probe": [
    // какие файлы нужно проверять
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "eslint.rules.customizations": [
    // для проблем форматирования кода уровень info
    { "rule": "prettier/prettier", "severity": "info" }
  ],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.commandCenter": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.unicodeHighlight.allowedLocales": {
    "ru": true
  },
  "workbench.sideBar.location": "right",
  "editor.minimap.enabled": false,
  "sftp.debug": true,
  "sftp.printDebugLog": true,
  "workbench.startupEditor": "none",
  "diffEditor.codeLens": true,
  "git.autofetch": true,
  // "python.formatting.provider": "BlackFormatter",
  "redhat.telemetry.enabled": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "[go.mod]": {
    "editor.defaultFormatter": "golang.go"
  },
  "workbench.iconTheme": "material-icon-theme",
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "[nginx]": {
    "editor.defaultFormatter": "raynigon.nginx-formatter"
  },
  "window.zoomLevel": 1
}
